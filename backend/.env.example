# Kalongo Hotel - Backend Environment
# Copy to .env and fill values

DEBUG=1
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,.render.com,.vercel.app

# PostgreSQL (Render provides DATABASE_URL)
DATABASE_URL=postgres://user:password@host:5432/dbname

# JWT
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# CORS - Frontend URL
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-app.vercel.app

# Optional: Email (future)
# EMAIL_HOST=
# EMAIL_PORT=
# EMAIL_USE_TLS=
